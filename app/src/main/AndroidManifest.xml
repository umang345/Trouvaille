<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trouvaille">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trouvaillelogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trouvaillelogo"
        android:supportsRtl="true"
        android:theme="@style/NoBar">
        <activity android:name=".DisplayImagesActivity" android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme" android:parentActivityName=".DetailsActivity"/>
        <activity
            android:name=".ReviewActivity"
            android:label="@string/Reviews"
            android:parentActivityName=".DetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme2"/>
        <activity
            android:name=".AboutActivity"
            android:label="@string/About"
            android:parentActivityName=".DetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme2"/>
        <activity
            android:name=".DetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DetailsTheme"/>
        <activity
            android:name=".GamingActivity"
            android:label="@string/Gaming"
            android:parentActivityName=".EntertainmentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoviesActivity"
            android:label="@string/Movies"
            android:parentActivityName=".EntertainmentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HotelActivity"
            android:label="@string/Hotel"
            android:parentActivityName=".EntertainmentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShoppingActivity"
            android:label="@string/Shopping"
            android:parentActivityName=".EntertainmentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CafeActivity"
            android:label="@string/Cafe"
            android:parentActivityName=".EntertainmentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FoodActivity"
            android:label="@string/Food"
            android:parentActivityName=".EntertainmentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EntertainmentList"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TrialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:label="@string/loginLabel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/registerLabel"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>